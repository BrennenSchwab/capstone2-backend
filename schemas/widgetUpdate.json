{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://capstone-app.com/widgetUpdate.schema.json",
    "type": "object",
    "properties": {
      "x": {
        "type": "integer",
        "minimum": 0
      },
      "y": {
        "type": "integer",
        "minimum": 0
      },
      "width": {
        "type": "integer",
        "minimum": 1
      },
      "height": {
        "type": "integer",
        "minimum": 1
      },
      "contentType": {
        "type": "string"
      },
      "contentId": {
        "type": "integer"
      }
    },
    "additionalProperties": false,
    "required": [
      "x",
      "y",
      "width",
      "height",
      "contentType",
      "contentId"
    ]
  }